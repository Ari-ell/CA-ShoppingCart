<div class="container pagetitle d-flex justify-content-center">
    <h3 align="center">My Purchases</h3>
</div>
<div class="card-group card-purchase">
    @for (int i = 0; i < 6; i++)
    {
        <div class="container">
            <div class="d-flex flex-row card mb-3" id="purchase-card">

                <div class="card-body p-2">
                    <img src="~/assets/purchaseimages/shampoo.jpg" class="card-img-top" alt="...">
                </div>
                <div class="container d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Product title @i</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                    <button type="button" class="btn btn-block dl-btn ">
                        Download here
                        <i class="bi bi-download"></i>
                    </button>
                </div>
                <div class="p-2 w-75 d-flex flex-column justify-content-center">
                    <h4 class="pur-title">Purchase Order Information</h4>
                    <span class="d-block">Date :  08 / Apr / 2023 </span>
                    <span class="d-block">Qty : 4</span>
                    <div class="row align-items-center">
                        <label for="activationCode" class="col-4 pe-0">Activation Code:</label>
                        <div class="col-8">
                            <select class="form-select" aria-label="activationCode">
                                <option value="">AEFWREW-321-3223-ASDA</option>
                                <option value="">AEFWREW-321-3223-ASDA</option>
                            </select>
                        </div>
                    </div>
                    <h4 class="rate-title">Ratings</h4>
                    <div class="stars" style="text-align: start;">
                        @for (int j = 0; j < 5; j++)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>