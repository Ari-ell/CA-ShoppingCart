@{

    ViewData["Title"] = "My Purchases";
    var myPurchases = (List<PurchaseOrder>)ViewBag.myPurchases;
    var myProducts = (Dictionary<string, Product>)ViewBag.myProducts;
    var myActivationCodes = (Dictionary<string, List<string>>)ViewBag.myActivationCodes;
    var myReviews = (Dictionary<string, int>)ViewBag.myReviews;
}

@section Scripts{
        <script src="/js/rating.js"></script>
}
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
</head>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container nav-con">
        <a class="navbar-brand" href="#">Team 1</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Log Out</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"> <i class="bi bi-cart"></i></a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container pagetitle d-flex justify-content-center">
    <h3 align="center">My Purchases</h3>
</div>

<div class="card-group card-purchase">
    @foreach(var purchase in myPurchases)
    {
        <div class="container">
            <div class="d-flex flex-row card mb-3" id="purchase-card">

                <div class="card-body p-2">
                    <img src= "../assets/image/@myProducts[(string)purchase.ProductId].Img" class="card-img-top" alt="...">
                </div>
                <div class="container d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title" id="Product Name">@myProducts[(string)purchase.ProductId].Name</h5>
                    <p class="card-text" id="Product Description">@myProducts[(string)purchase.ProductId].Description</p>
                    <button type="button" class="btn btn-block dl-btn ">
                        Download here
                        <i class="bi bi-download"></i>
                    </button>
                </div>
                <div class="p-2 w-75 d-flex flex-column justify-content-center">
                    <span class="d-block" id="Date of Purchase">Date: @purchase.PurchaseDate</span>
                    <span class="d-block" id="PurchaseQty">Qty: @purchase.PurchaseQty</span>
                    <div class="row align-items-center">
                        <label for="activationCode" class="col-4 pe-0">Activation Code: </label>
                        <div class="col-8">
                            <select class="form-select" aria-label="activationCode">
                                @for (int i = 0; i < @myActivationCodes[purchase.PurchaseId].Count; i++)
                                {
                                    <option value=""> @myActivationCodes[purchase.PurchaseId][i]</option>
                                }
                            </select>
                        </div>
                    </div>
                    <h4 class="rate-title">Ratings</h4>
                    <div id="@purchase.ProductId">
                    <form action="">
                        <fieldset class="stars">
                            <input class="star star-5" value="5" id="star-5" type="radio" name="stars-5" data-product-id=@purchase.ProductId @(myReviews[(string)purchase.ProductId]==5? "checked":"") />
                                <label class="star star-5" for="star-5"></label>
                            <input class="star star-4" value="4" id="star-4" type="radio" name="stars-4" data-product-id=@purchase.ProductId @(myReviews[(string)purchase.ProductId]==4? "checked":"") />
                                <label class="star star-4" for="star-4"></label>
                            <input class="star star-3" value="3" id="star-3" type="radio" name="stars-3" data-product-id=@purchase.ProductId @(myReviews[(string)purchase.ProductId]==3? "checked":"") />
                                <label class="star star-3" for="star"></label>
                            <input class="star star-2" value="2" id="star-2" type="radio" name="stars-2" data-product-id=@purchase.ProductId @(myReviews[(string)purchase.ProductId]==2? "checked":"") />
                                <label class="star star-2" for="star"></label>
                            <input class="star star-1" value="1" id="star-1" type="radio" name="stars-1" data-product-id=@purchase.ProductId @(myReviews[(string)purchase.ProductId]==1? "checked":"") />
                                <label class="star star-1" for="star"></label>
                        </fieldset>
                    </form>
                    </div>

                </div>
                
                    
                
                
            </div>
        </div>
    }
</div>

