@{

    var products = (List<Product>)ViewBag.products;
    var user = (User)ViewBag.users;

}
@section Scripts
{
    <script src="/js/Gallery.js"></script>
}
<div>
    <ul class="nav">

        @if (user.Username != null)
        {
            <li class="nav-item">
                <a class="nav-link disabled">Hello, @user.Username</a>
            </li>

            <li class="nav-item">
                <p><a class="nav-link" href="#">My Purchases</a><p>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">Logout</a>
            </li>

        }
        else
        {
            <li class="nav-item">
                <a class="nav-link disabled">Hello, guest</a>
            </li>


            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>


        }
        <li class="nav-item" style="right: 1.8rem; position: absolute;margin-top:0.5rem">
            <button type="button" class="btn btn-primary btn-sm cartBtn">
                Cart
                <span class="badge text-bg-secondary">0</span>
            </button>
        </li>
    </ul>

</div>
<div style="margin:1rem;">
    <form class="d-flex" role="search">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">
                    <img src="/assets/icons/search.svg" alt="Bootstrap" width="32" height="32">
                </span>
            </div>
            <input class="form-control me-2 searchInput" type="search" placeholder="Search" aria-label="Search">

            <button class="btn btn-outline-success searchBtn" type="submit">Search</button>
        </div>
    </form>
</div>

<div class="container text-center">
    <div class="row row-cols-3">
        @foreach (Product product in products)
        {
            <div class="col">
                <div class="card rounded" style="width: 22rem;margin-bottom:1rem;margin-top:1rem;">
                    <img src="../assets/image/@product.Img" class="card-img-top img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <button class="btn btn-outline-info addToCartBtn">@product.Price @Html.Raw("-Add to Cart")</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


