@{

    var products = (List<Product>)ViewBag.products;
    var user = (User)ViewBag.users;

}
@section Scripts
{
    <script src="/js/Gallery.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}
<div>
    <ul class="nav">

        @if (user.Username != null)
        {
            <li class="nav-item">
                <a class="nav-link disabled">Hello, @user.Username</a>
            </li>

            <li class="nav-item">
                <p><a class="nav-link" href="#">My Purchases</a><p>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="modal" data-target="#exampleModal">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link disabled">Hello, guest</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>
           

        }
        <li class="nav-item" style="right:6rem; position: absolute;margin-top:0.5rem">
            <button type="button" class="btn btn-outline-success btn-sm cartBtn">
                <img src="/assets/icons/cart-check-fill.svg" alt="Bootstrap" width="22" height="22">
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    1
                </span>
            </button>
        </li>
    </ul>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Comfirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure to logout?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary logoutBtn" data-dismiss="modal">Yes</button>
            </div>
        </div>
    </div>
</div>

<div style="margin:1rem;">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">
                <img src="/assets/icons/search.svg" alt="Bootstrap" width="32" height="32">
            </span>
        </div>


        <input class="form-control me-2 searchInput" type="search" placeholder="Search" aria-label="Search">

        <button class="btn btn-outline-success searchBtn" type="submit">Search</button>


    </div>

</div>

<div class="container text-center">
    <div class="row row-cols-3">
        @foreach (Product product in products)
        {
            <div class="col">
                <div class="card rounded" style="width: 22rem;margin-bottom:1rem;margin-top:1rem;">
                    <img src="../assets/image/@product.Img" class="img-fluid mx-auto d-block img-thumbnail" alt="..." width="100" style="margin:0.3rem;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <button class="btn btn-outline-info addToCartBtn">@Html.Raw("$")@product.Price @Html.Raw("- Add to Cart")</button>
                        @* Need to add in the review bar*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>


