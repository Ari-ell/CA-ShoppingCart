@{
    ViewData["Title"] = "Home Page";
}
@section Scripts
{
    <script src="/js/login.js"></script>
}
<div class="card mb-5" style="width: 40rem; margin-right: 30rem; margin-left: 15rem; margin-top: 5rem;">
    <div class="card-body">
        <h5 class="card-title">Login</h5>
        <form>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label ">Username</label>
                <input class="form-control" id="username" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="password">
            </div>

            <button type="submit" class="btn btn-primary loginBtn">Submit</button>
        </form>
    </div>
</div>
